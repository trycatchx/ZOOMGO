<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="6dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="6dp"
    android:weightSum="2" >

    <LinearLayout
        android:id="@+id/llyt_grid_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:layout_weight="1"
        android:background="@drawable/disk_backup_media_setting_item_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <com.dmsys.airdiskpro.view.PicFolderFrameLayout
            android:id="@+id/flyt_grid_item"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true" >

            <LinearLayout
                android:id="@+id/llyt_grid_sub_item"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:weightSum="2" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/fileexplorer_grid_item_icon_0"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/filemanager_photo_default" />

                    <ImageView
                        android:id="@+id/fileexplorer_grid_item_icon_1"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/filemanager_photo_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2" >

                    <ImageView
                        android:id="@+id/fileexplorer_grid_item_icon_2"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/filemanager_photo_default" />

                    <ImageView
                        android:id="@+id/fileexplorer_grid_item_icon_3"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/filemanager_photo_default" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#771f1f1f" >

                <TextView
                    android:id="@+id/tv_grid_item_folder_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="left"
                    android:ellipsize="middle"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tv_grid_item_folder_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/tv_grid_item_folder_count"
                    android:ellipsize="middle"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@android:color/white" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/fileexplorer_grid_item_operatinobtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/setting_file_manager_pic_selector"
                android:visibility="invisible" />
        </com.dmsys.airdiskpro.view.PicFolderFrameLayout>
    </LinearLayout>

    <!-- 第二个相册 -->

    <LinearLayout
        android:id="@+id/llyt_grid_item_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_weight="1"
        android:background="@drawable/disk_backup_media_setting_item_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <com.dmsys.airdiskpro.view.PicFolderFrameLayout
            android:id="@+id/flyt_grid_item_1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:clickable="true" >

            <LinearLayout
                android:id="@+id/llyt_grid_sub_item_1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:weightSum="2" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/fileexplorer_grid_item_icon_4"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/filemanager_photo_default" />

                    <ImageView
                        android:id="@+id/fileexplorer_grid_item_icon_5"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/filemanager_photo_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2" >

                    <ImageView
                        android:id="@+id/fileexplorer_grid_item_icon_6"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/filemanager_photo_default" />

                    <ImageView
                        android:id="@+id/fileexplorer_grid_item_icon_7"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/filemanager_photo_default" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#771f1f1f" >

                <TextView
                    android:id="@+id/tv_grid_item_folder_count_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="left"
                    android:ellipsize="middle"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tv_grid_item_folder_name_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/tv_grid_item_folder_count_1"
                    android:ellipsize="middle"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@android:color/white" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/fileexplorer_grid_item_operatinobtn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/setting_file_manager_pic_selector"
                android:visibility="invisible" />
        </com.dmsys.airdiskpro.view.PicFolderFrameLayout>
    </LinearLayout>

</LinearLayout>