<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f3f3f3" >

    <include
        android:id="@+id/head"
        layout="@layout/common_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:background="@drawable/sel_phone_backup_item"
            android:id="@+id/rlyt_album_backup"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:clickable="true"
             android:layout_marginBottom="8dp"
             android:layout_marginTop="8dp"
           
           >

            <ImageView
                android:id="@+id/iv_album_backup_icon"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_centerVertical="true"
                android:src="@drawable/album_backup_icon"
                 android:layout_marginLeft="18dp"
                 />

            <TextView
                android:id="@+id/tv_album_backup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/iv_album_backup_icon"
                android:singleLine="true"
                android:text="@string/DM_Backup_Album_Title"
                android:textColor="@color/DM_title_text_color"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                 android:src="@drawable/date_updateload_to"
                 android:layout_marginRight="5dp"
               />
        </RelativeLayout>
        
        <RelativeLayout
            android:background="@drawable/sel_phone_backup_item"
            android:id="@+id/rlyt_contacts_backup"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:clickable="true"
           >

            <ImageView
                android:id="@+id/iv_contacts_backup_icon"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_centerVertical="true"
                android:src="@drawable/contacts_backup_icon"
                 android:layout_marginLeft="18dp"
                 />

            <TextView
                android:id="@+id/tv_contacts_backup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/iv_contacts_backup_icon"
                android:singleLine="true"
                android:text="@string/DM_Backup_Address_Title"
                android:textColor="@color/DM_title_text_color"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                 android:src="@drawable/date_updateload_to"
                 android:layout_marginRight="5dp"
               />
        </RelativeLayout>

        

       
    </LinearLayout>

</LinearLayout>