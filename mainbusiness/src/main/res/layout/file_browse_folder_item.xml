<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llyt_grid_item"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/disk_backup_media_setting_item_bg"
        android:clickable="false"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="1dp" >

        <FrameLayout
            android:id="@+id/flyt_grid_item"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/llyt_grid_sub_item"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:padding="3dp"
                android:weightSum="2" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/fileexplorer_grid_item_icon_0"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/filemanager_photo_default" />

                    <ImageView
                        android:id="@+id/fileexplorer_grid_item_icon_1"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/filemanager_photo_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2" >

                    <ImageView
                        android:id="@+id/fileexplorer_grid_item_icon_2"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/filemanager_photo_default" />

                    <ImageView
                        android:id="@+id/fileexplorer_grid_item_icon_3"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/filemanager_photo_default" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/sel_folder_pic_name" >

                <TextView
                    android:id="@+id/tv_grid_item_folder_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="left"
                    android:ellipsize="middle"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:textColor="#0086D1" />

                <TextView
                    android:id="@+id/tv_grid_item_folder_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/tv_grid_item_folder_count"
                    android:ellipsize="middle"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="#0086D1" />
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>