<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:gravity="center_vertical"
    android:background="#0086D1" >

    <ImageView
        android:id="@+id/titlebar_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:scaleType="center"
        android:src="@drawable/dm_lib_wifi_back_btn_bg_selector"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tv_title_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="left|center"
        android:padding="8.0dip"
        android:singleLine="true"
        android:text="无线存储"
        android:textColor="@android:color/white"
        android:textSize="16.0sp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/action_edit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:paddingRight="18.0dip"
        android:paddingLeft="18.0dip"
        android:gravity="center"
        android:text="@string/DM_Control_Select"
        android:textColor="@android:color/white"
        android:textSize="14.0sp"
        android:layout_centerVertical="true"
         />

</RelativeLayout>