<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/image_Layout_Title"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/ivBack"
            style="@style/image_LeftIcon_Title"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scaleType="centerInside"
            android:src="@drawable/dm_lib_back_title"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvImageName"
            style="@style/image_SettingListTitle"
            android:layout_toLeftOf="@+id/tvImageCount"
            android:layout_toRightOf="@+id/ivBack"
            android:lines="1"
            android:singleLine="true"
            android:text="" />

        <TextView
            android:id="@+id/tvImageCount"
            style="@style/image_SettingRightTitle"
            android:layout_alignParentRight="true"
            android:text="" />
    </RelativeLayout>
